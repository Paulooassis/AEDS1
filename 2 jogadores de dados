#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int sortear(){
    return rand() % 6 + 1;
}

int somar(int dado1, int dado2){
    return dado1+ dado2;
}


    int main(){

    srand(time(NULL));

    int dado1[2], dado2[2], soma[2];

    for(int i=0; i<2; i++){
        dado1[i] = sortear();
        dado2[i] = sortear();
        soma[i] = somar(dado1[i], dado2[i]);
    }

    for(int i=0; i<2; i++){
        if(soma[0] > soma[1]){
            printf("%d + %d = %d -- Jogador 1 venceu", dado1[0], dado2[0], soma[0]);
            break;
        }
        else if(soma[1] > soma[0]){
            printf("%d + %d = %d -- Jogador 2 venceu", dado1[1], dado2[1], soma[1]);
            break;
        }
        else{
            printf("Eles empataram, fizeram %d total", soma[0]);
            break;
        }
    }
}


