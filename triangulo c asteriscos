#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){
    int linhas, ast = 1;
    printf("Digite qunatas linhas o triangulo vai ter: ");
    scanf("%d", &linhas);
    for(int i = 0; i < linhas; i++){
        for(int j =0; j< linhas - i; j++){
            printf(" ");
        }
        for(int k = 0; k < ast; k++){
                printf("*");
        }
        ast += 2;
        printf("\n");
    }
}
