#include <stdio.h>

int main(){
    int m,n;

    printf("Digite quantas linhas: ");
    scanf("%d", &m);

    printf("Digite quantas colunas: ");
    scanf("%d", &n);

    int mat[m][n];

    for(int i=0; i<m; i++){
        for(int j =0; j<n; j++){
            printf("Digite o num %d %d: ", i, j);
            scanf("%d", &mat[i][j]);
        }
    }

    printf("\n");

    for(int i=0; i<m; i++){
        for(int j =0; j<n; j++){
            printf("%d ", mat[i][j]);
        }
        printf("\n");
    }

    printf("\n");

    for(int j=0; j<n; j++){
        for(int i =0; i<m; i++){
            printf("%d ", mat[i][j]);
        }
        printf("\n");
    }
}
